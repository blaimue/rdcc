<h1>Log In</h1>

<% form_tag session_path do -%>
<p><%= label_tag 'Email' %><br />
<%= text_field_tag 'email', @email %></p>

<p><%= label_tag 'password' %><br/>
<%= password_field_tag 'password', nil %> <%= link_to "I forget my password!", forgot_password_path %></p>

<p><%= button 'session', 'Log in' %>
</p>
<% end -%>

